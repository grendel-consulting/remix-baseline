{
  "name": "baseline-remix-app",
  "description": "Baseline configuration of Remix with preferred tooling",
  "author": "James Ramirez",
  "version": "0.1.0",
  "sideEffects": false,
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "typecheck": "tsc -b",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@remix-run/node": "1.14.3",
    "@remix-run/react": "1.14.3",
    "@remix-run/serve": "1.14.3",
    "isbot": "3.6.7",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@remix-run/dev": "1.14.3",
    "@remix-run/eslint-config": "1.14.3",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-essentials": "^7.0.0-beta.61",
    "@storybook/addon-interactions": "7.0.0-rc.8",
    "@storybook/addon-links": "^7.0.0-beta.61",
    "@storybook/blocks": "^7.0.0-alpha.8",
    "@storybook/jest": "^0.0.10",
    "@storybook/react": "^7.0.0-beta.61",
    "@storybook/react-vite": "^7.0.0-beta.61",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "8.36.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-storybook": "^0.6.11",
    "prettier": "^2.8.4",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.0-beta.61",
    "turbo": "^1.8.3",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  }
}
